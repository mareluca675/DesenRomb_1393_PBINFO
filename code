#include <iostream>

using namespace std;

int main()
{
long long n, i, j, k;
    
    cin >> n;
    
    for(i = 1; i <= n; i++)
    {
        for(j = 1; j <= n - i; j ++)
        {
            cout << " ";
        }
        
        while(j <= n)
        {
            cout << i;
            j ++;
        }
        
        for(k = 1; k < i; k ++)
        {
            cout << i;
        }
        
        for(j = 1; j <= n - i; j ++)
        {
            cout << " ";
        }
        
        cout << '\n';
    }
    
    for(i = n - 1; i >= 1; i--)
    {
        for(j = 1; j <= n - i; j ++)
        {
            cout << " ";
        }
        
        while(j <= n)
        {
            cout << i;
            j ++;
        }
        
        for(k = 1; k < i; k ++)
        {
            cout << i;
        }
        
        for(j = 1; j <= n - i; j ++)
        {
            cout << " ";
        }
        
        cout << '\n';
    }
   
   
}
